<gui>
    <window title="Python Chat App" width="500" height="600" bg="#f2f2f2">
        <!-- Thanh tiêu đề -->
        <frame name="header" side="top" fill="x" bg="#4CAF50" height="50">
            <label name="title_label" text="Welcome to Python Chat" fg="white" font="Arial 16 bold" padx="10" pady="10"/>
        </frame>

        <!-- Khung chat -->
        <frame name="chat_frame" side="top" fill="both" expand="true" padx="10" pady="10" bg="#ffffff">
            <listbox name="chat_list" bg="white" fg="black" font="Arial 12" selectmode="none"/>
        </frame>

        <!-- Thanh nhập liệu -->
        <frame name="input_frame" side="bottom" fill="x" bg="#f2f2f2" padx="10" pady="10">
            <entry name="message_entry" font="Arial 12" width="40"/>
            <button name="send_button" text="Send" bg="#4CAF50" fg="white" font="Arial 12 bold" padx="10" pady="5"/>
            <button name="image_button" text="📷" bg="#2196F3" fg="white" font="Arial 14 bold" padx="10" pady="5"/>
        </frame>
    </window>
</gui>